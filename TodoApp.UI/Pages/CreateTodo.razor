@page "/new"

<form>
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" value="@Request.Title" class="form-control" id="title"
               @onchange="@(args=>Request.Title=args.Value.ToString())">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input type="text" class="form-control" id="description" value="@Request.Description"
               @onchange="@(args=>Request.Description=args.Value.ToString())">
    </div>
    <button type="button" class="btn btn-primary" @onclick="Create">Create</button>
</form>